<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama_produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/masukkan_nama_produk"
        android:background="@drawable/custom_edit_text_layout"
        android:id="@+id/edit_product_nama"
        android:padding="10dp"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
    <com.cottacush.android.currencyedittext.CurrencyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="10dp"
        app:maxNumberOfDecimalDigits="2"
        tools:ignore="HardcodedText"
        android:id="@+id/edit_product_harga"
        app:currencySymbol="Rp"
        app:useCurrencySymbolAsHint="true"
        android:background="@drawable/custom_edit_text_layout"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kategori_produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_text_layout"
        android:id="@+id/edit_product_kategori"
        android:padding="10dp"
        android:text="@string/pilih"
        app:drawableEndCompat="@drawable/ic_drop_down_arrow" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lokasi_toko"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/masukkan_lokasi_toko"
        android:background="@drawable/custom_edit_text_layout"
        android:id="@+id/edit_product_lokasi_toko"
        android:padding="10dp"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deskripsi_produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/masukkan_deskripsi_produk"
        android:background="@drawable/custom_edit_text_layout"
        android:id="@+id/edit_product_deskripsi"
        android:padding="10dp"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/foto_produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/edit_product_foto_button">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/edit_product_foto"
            android:background="@color/image_picker_background"
            android:contentDescription="@string/img"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perbarui_produk"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_layout_2"
        android:id="@+id/edit_product_update_button"/>
</LinearLayout>